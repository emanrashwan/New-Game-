{{ 'customer.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .customer.register {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 100vh;
    position: relative;
    overflow: hidden;
  }

  .customer.register::before,
  .customer.register::after {
    content: '';
    position: absolute;
    border-radius: 50%;
    {% if section.settings.background_image != blank %}
      display: none;
    {% endif %}
  }

  .customer.register::before {
    width: 200px;
    height: 200px;
    background: rgba(165, 214, 167, 0.3);
    top: 10%;
    left: 10%;
  }

  .customer.register::after {
    width: 150px;
    height: 150px;
    background: rgba(128, 203, 196, 0.3);
    bottom: 15%;
    right: 15%;
  }

  .register__card {
    background: #ffffff;
    padding: 40px;
    border-radius: 20px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    max-width: 450px;
    width: 100%;
    text-align: center;
    z-index: 1;
  }

  .register__logo {
    margin-bottom: 20px;
  }

  .register__logo img {
    max-width: 80px;
    height: auto;
  }

  .register__card h1 {
    font-size: 28px;
    margin-bottom: 10px;
  }

  .register__subtitle {
    font-size: 16px;
    color: #666;
    margin-bottom: 30px;
  }

  .register__card .field {
    margin-bottom: 20px;
    position: relative;
  }

  .register__card .field input {
    width: 100%;
    padding: 15px 20px 15px 50px;
    border: 1px solid #ddd;
    border-radius: 10px;
    font-size: 16px;
  }

  .register__card .field {
    text-align: left;
  }

  .register__card .field label {
    display: block;
    margin-bottom: 8px;
    font-weight: 500;
    font-size: 14px;
  }

  .register__card .field::before {
    content: '';
    position: absolute;
    left: 20px;
    top: 50%;
    transform: translateY(-50%);
    width: 20px;
    height: 20px;
    background-size: contain;
    background-repeat: no-repeat;
  }

  #RegisterForm-FullName + label::before,
  .field:has(#RegisterForm-FullName)::before {
    background-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-user"><path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path><circle cx="12" cy="7" r="4"></circle></svg>');
  }

  #RegisterForm-email + label::before,
  .field:has(#RegisterForm-email)::before {
    background-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-mail"><path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path><polyline points="22,6 12,13 2,6"></polyline></svg>');
  }

  #RegisterForm-password + label::before,
  .field:has(#RegisterForm-password)::before {
    background-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-lock"><rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect><path d="M7 11V7a5 5 0 0 1 10 0v4"></path></svg>');
  }

  .register__card button {
    width: 100%;
    padding: 15px;
    background: linear-gradient(to right, #50E3C2, #28B4A6);
    color: white;
    border: none;
    border-radius: 10px;
    font-size: 18px;
    cursor: pointer;
    transition: background 0.3s;
  }

  .register__card button:hover {
    background: linear-gradient(to right, #28B4A6, #50E3C2);
  }

  .register__signin {
    margin-top: 20px;
    font-size: 14px;
  }

  .register__signin a {
    color: #007bff;
    text-decoration: none;
  }

  .register__signin a:hover {
    text-decoration: underline;
  }

{%- endstyle -%}

<div class="customer register section-{{ section.id }}-padding">
  <svg style="display: none">
    <symbol id="icon-error" viewBox="0 0 13 13">
      <circle cx="6.5" cy="6.50049" r="5.5" stroke="white" stroke-width="2"/>
      <circle cx="6.5" cy="6.5" r="5.5" fill="#EB001B" stroke="#EB001B" stroke-width="0.7"/>
      <path d="M5.87413 3.52832L5.97439 7.57216H7.02713L7.12739 3.52832H5.87413ZM6.50076 9.66091C6.88091 9.66091 7.18169 9.37267 7.18169 9.00504C7.18169 8.63742 6.88091 8.34917 6.50076 8.34917C6.12061 8.34917 5.81982 8.63742 5.81982 9.00504C5.81982 9.37267 6.12061 9.66091 6.50076 9.66091Z" fill="white"/>
      <path d="M5.87413 3.17832H5.51535L5.52424 3.537L5.6245 7.58083L5.63296 7.92216H5.97439H7.02713H7.36856L7.37702 7.58083L7.47728 3.537L7.48617 3.17832H7.12739H5.87413ZM6.50076 10.0109C7.06121 10.0109 7.5317 9.57872 7.5317 9.00504C7.5317 8.43137 7.06121 7.99918 6.50076 7.99918C5.94031 7.99918 5.46982 8.43137 5.46982 9.00504C5.46982 9.57872 5.94031 10.0109 6.50076 10.0109Z" fill="white" stroke="#EB001B" stroke-width="0.7">
    </symbol>
  </svg>
  <div class="register__card">
    {%- if section.settings.logo != blank -%}
      <div class="register__logo">
        {{ section.settings.logo | image_url: width: 200 | image_tag }}
      </div>
    {%- endif -%}
    <h1>
      {{ 'customer.register.title' | t }}
    </h1>
    {%- if section.settings.subtitle != blank -%}
      <p class="register__subtitle">{{ section.settings.subtitle }}</p>
    {%- endif -%}
    {%- form 'create_customer', novalidate: 'novalidate', id: 'create_customer' -%}
      {%- if form.errors -%}
        <h2 class="form__message" tabindex="-1" autofocus>
          <svg aria-hidden="true" focusable="false" role="presentation">
            <use href="#icon-error" />
          </svg>
          {{ 'templates.contact.form.error_heading' | t }}
        </h2>
        <ul>
          {%- for field in form.errors -%}
            <li>
              {%- if field == 'form' -%}
                {{ form.errors.messages[field] }}
              {%- else -%}
                <a href="#RegisterForm-{{ field }}">
                  {{ form.errors.translated_fields[field] | capitalize }}
                  {{ form.errors.messages[field] }}
                </a>
              {%- endif -%}
            </li>
          {%- endfor -%}
        </ul>
      {%- endif -%}

      <input type="hidden" name="customer[first_name]" id="RegisterForm-FirstName" />
      <input type="hidden" name="customer[last_name]" id="RegisterForm-LastName" />

      <div class="field">
        <input
          type="text"
          id="RegisterForm-FullName"
          autocomplete="name"
          placeholder="{{ 'customer.register.full_name_placeholder' | t }}"
        >
        <label for="RegisterForm-FullName">
          {{ 'customer.register.full_name' | t }}
        </label>
      </div>

      <div class="field">
        <input
          type="email"
          name="customer[email]"
          id="RegisterForm-email"
          {% if form.email %}
            value="{{ form.email }}"
          {% endif %}
          spellcheck="false"
          autocapitalize="off"
          autocomplete="email"
          aria-required="true"
          {% if form.errors contains 'email' %}
            aria-invalid="true"
            aria-describedby="RegisterForm-email-error"
          {% endif %}
          placeholder="{{ 'customer.register.email_placeholder' | t }}"
        >
        <label for="RegisterForm-email">
          {{ 'customer.register.email' | t }}
        </label>
      </div>
      {%- if form.errors contains 'email' -%}
        <span id="RegisterForm-email-error" class="form__message">
          <svg aria-hidden="true" focusable="false" role="presentation">
            <use href="#icon-error" />
          </svg>
          {{ form.errors.translated_fields['email'] | capitalize }}
          {{ form.errors.messages['email'] }}.
        </span>
      {%- endif -%}
      <div class="field">
        <input
          type="password"
          name="customer[password]"
          id="RegisterForm-password"
          aria-required="true"
          {% if form.errors contains 'password' %}
            aria-invalid="true"
            aria-describedby="RegisterForm-password-error"
          {% endif %}
          placeholder="{{ 'customer.register.password_placeholder' | t }}"
        >
        <label for="RegisterForm-password">
          {{ 'customer.register.password' | t }}
        </label>
      </div>
      {%- if form.errors contains 'password' -%}
        <span id="RegisterForm-password-error" class="form__message">
          <svg aria-hidden="true" focusable="false" role="presentation">
            <use href="#icon-error" />
          </svg>
          {{ form.errors.translated_fields['password'] | capitalize }}
          {{ form.errors.messages['password'] }}.
        </span>
      {%- endif -%}
      <button>
        {{ 'customer.register.submit' | t }}
      </button>
    {%- endform -%}
    <div class="register__signin">
      <p>{{ 'customer.register.login_prompt' | t }} <a href="{{ routes.account_login_url }}">{{ 'customer.login_page.sign_in' | t }}</a></p>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const body = document.body;
    {% if section.settings.background_image != blank %}
      body.style.backgroundImage = "url('{{ section.settings.background_image | image_url: width: 1920, height: 1080 }}')";
      body.style.backgroundSize = 'cover';
      body.style.backgroundPosition = 'center';
      body.style.backgroundRepeat = 'no-repeat';
      body.style.minHeight = '100vh';
    {% else %}
      body.style.background = 'linear-gradient(to bottom right, #f0f4f8, #d9e2ec)';
    {% endif %}
  });

  document.getElementById('create_customer').addEventListener('submit', function(e) {
    const fullName = document.getElementById('RegisterForm-FullName').value;
    const nameParts = fullName.trim().split(' ');
    const firstName = nameParts.shift() || '';
    const lastName = nameParts.join(' ');

    document.getElementById('RegisterForm-FirstName').value = firstName;
    document.getElementById('RegisterForm-LastName').value = lastName;
  });
</script>


{% schema %}
{
  "name": "t:sections.main-register.name",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Join the Board Game community"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ]
}
{% endschema %}
