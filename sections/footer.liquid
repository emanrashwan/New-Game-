<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

<style>
  .new-footer {
    background-color: #0e3e4a;
    color: #ffffff;
    padding: 60px 0 20px;
    font-family: Arial, sans-serif;
  }
  .new-footer .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 15px;
  }
  .new-footer .newsletter-section {
    text-align: center;
    margin-bottom: 60px;
  }
  .new-footer .newsletter-section h2 {
    font-size: 36px;
    margin-bottom: 10px;
  }
  .new-footer .newsletter-section p {
    font-size: 18px;
    margin-bottom: 30px;
  }
  .new-footer .newsletter-form {
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .new-footer .newsletter-form input {
    width: 300px;
    padding: 15px;
    border: 1px solid #ffffff;
    border-radius: 5px 0 0 5px;
    background-color: #ffffff;
    color: #000000;
  }
  .new-footer .newsletter-form button {
    padding: 15px 30px;
    border: 1px solid #ffffff;
    background-color: #ffffff;
    color: #0e3e4a;
    border-radius: 0 5px 5px 0;
    cursor: pointer;
    font-size: 16px;
  }
    .new-footer .newsletter-form button:hover {
    background-color: #e0e0e0;
  }
  .new-footer .unsubscribe-text {
    font-size: 12px;
    margin-top: 15px;
  }
  .new-footer .footer-content {
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
    margin-bottom: 40px;
  }
  .new-footer .footer-column {
    flex: 1;
    min-width: 200px;
    margin-bottom: 20px;
  }
  .new-footer .footer-column.logo-column {
    flex: 2;
  }
  .new-footer .logo-container {
    display: flex;
    align-items: center;
    margin-bottom: 20px;
  }
  .new-footer .logo {
    width: 50px;
    height: 50px;
    margin-right: 10px;
  }
  .new-footer .logo-text {
    font-size: 24px;
    font-weight: bold;
  }
    .new-footer .logo-subtext {
    font-size: 14px;
  }
  .new-footer .logo-column p {
    font-size: 14px;
    line-height: 1.6;
    max-width: 350px;
  }
  .new-footer .footer-column h3 {
    font-size: 18px;
    margin-bottom: 20px;
  }
  .new-footer .footer-column ul {
    list-style: none;
    padding: 0;
  }
  .new-footer .footer-column ul li {
    margin-bottom: 10px;
  }
  .new-footer .footer-column ul li a {
    color: #ffffff;
    text-decoration: none;
    font-size: 14px;
  }
   .new-footer .footer-column ul li a:hover {
    text-decoration: underline;
  }
  .new-footer .contact-info {
    border-top: 1px solid #3b5f6a;
    padding-top: 30px;
    margin-bottom: 30px;
  }
  .new-footer .contact-info-row {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-bottom: 15px;
  }
  .new-footer .contact-item {
    display: flex;
    align-items: center;
    margin: 0 20px;
    font-size: 14px;
  }
  .new-footer .contact-item i {
    margin-right: 10px;
    font-size: 18px;
  }
  .new-footer .footer-bottom {
    border-top: 1px solid #3b5f6a;
    padding-top: 20px;
  }
  .new-footer .copyright-social {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    margin-bottom: 20px;
  }
  .new-footer .copyright-text {
    font-size: 12px;
  }
    .new-footer .copyright-links {
    margin-left: 20px;
  }
  .new-footer .copyright-links a {
    color: #ffffff;
    text-decoration: none;
    margin: 0 10px;
    font-size: 12px;
  }
   .new-footer .copyright-links a:hover {
    text-decoration: underline;
  }
  .new-footer .social-icons a {
    color: #ffffff;
    text-decoration: none;
    margin-left: 15px;
    font-size: 18px;
  }
  .new-footer .footer-features {
    display: flex;
    justify-content: center;
    align-items: center;
    list-style: none;
    padding: 0;
  }
  .new-footer .footer-features li {
    display: flex;
    align-items: center;
    margin: 0 15px;
    font-size: 14px;
  }
  .new-footer .footer-features .dot {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    margin-right: 8px;
  }
  .new-footer .dot.green { background-color: #28a745; }
  .new-footer .dot.blue { background-color: #007bff; }
  .new-footer .dot.purple { background-color: #6f42c1; }
  .new-footer .dot.yellow { background-color: #ffc107; }
</style>

<footer class="new-footer">
  <div class="container">
    <div class="newsletter-section">
      <h2>{{ section.settings.newsletter_title }}</h2>
      <p>{{ section.settings.newsletter_subtitle }}</p>
      <form class="newsletter-form" action="{{ section.settings.newsletter_action_url }}" method="post">
        <input type="email" name="email" placeholder="{{ section.settings.newsletter_placeholder }}">
        <button type="submit">{{ section.settings.newsletter_button_text }}</button>
      </form>
      <p class="unsubscribe-text">{{ section.settings.newsletter_unsubscribe_text }}</p>
    </div>

    <div class="footer-content">
      <div class="footer-column logo-column">
        <div class="logo-container">
          {% if section.settings.logo %}
            <img src="{{ section.settings.logo | img_url: 'master' }}" alt="NewGame Logo" class="logo">
          {% endif %}
          <div>
            <span class="logo-text">{{ section.settings.logo_text }}</span>
            <div class="logo-subtext">{{ section.settings.logo_subtext }}</div>
          </div>
        </div>
        <p>{{ section.settings.logo_description }}</p>
      </div>

      {% for block in section.blocks %}
        {% if block.type == 'menu' %}
          <div class="footer-column">
            <h3>{{ block.settings.menu_title }}</h3>
            <ul>
              {% for link in linklists[block.settings.menu_handle].links %}
                <li><a href="{{ link.url }}">{{ link.title }}</a></li>
              {% endfor %}
            </ul>
          </div>
        {% endif %}
      {% endfor %}
    </div>

    <div class="contact-info">
      <div class="contact-info-row">
        <div class="contact-item"><i class="fas fa-phone-alt"></i> {{ section.settings.contact_phone }}</div>
        <div class="contact-item"><i class="fas fa-envelope"></i> {{ section.settings.contact_email }}</div>
        <div class="contact-item"><i class="fas fa-map-marker-alt"></i> {{ section.settings.contact_address }}</div>
      </div>
    </div>

    <div class="footer-bottom">
      <div class="copyright-social">
        <div class="copyright-text">
          {{ section.settings.copyright_text }}
          <span class="copyright-links">
            <a href="{{ section.settings.privacy_policy_url }}">Privacy Policy</a>
            <a href="{{ section.settings.terms_of_service_url }}">Terms of Service</a>
            <a href="{{ section.settings.cookie_policy_url }}">Cookie Policy</a>
          </span>
        </div>
        <div class="social-icons">
          <a href="{{ section.settings.social_facebook_url }}"><i class="fab fa-facebook-f"></i></a>
          <a href="{{ section.settings.social_twitter_url }}"><i class="fab fa-twitter"></i></a>
          <a href="{{ section.settings.social_instagram_url }}"><i class="fab fa-instagram"></i></a>
          <a href="{{ section.settings.social_youtube_url }}"><i class="fab fa-youtube"></i></a>
        </div>
      </div>
      <ul class="footer-features">
        <li><span class="dot green"></span>{{ section.settings.feature1_text }}</li>
        <li><span class="dot blue"></span>{{ section.settings.feature2_text }}</li>
        <li><span class="dot purple"></span>{{ section.settings.feature3_text }}</li>
        <li><span class="dot yellow"></span>{{ section.settings.feature4_text }}</li>
      </ul>
    </div>
  </div>
</footer>

